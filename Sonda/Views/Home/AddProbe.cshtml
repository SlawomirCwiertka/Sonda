@model Probea.ViewModels.ProbeViewModel
<div class="container">
        @using(Html.BeginForm("AddProbe", "Home"))
        {
            <div class="row">
                @Html.LabelFor(x => x.Question )
            </div>
            <div class="row">
                @Html.TextBoxFor(m => m.Question )
            </div>
            <div class="row">
                @Html.LabelFor(m => m.PublicationDate )
            </div>
            <div class="row">
                @Html.TextBoxFor(m => m.PublicationDate )
            </div>
            <div class="row">
                <label>Answers</label>
            </div>
            for (int i = 0; i < Model.Answers.Count; i++)
            {
                <div class="row">
                    @Html.EditorFor(m => Model.Answers[i].Text)
                </div>
            }

            <input type="submit" />
        }
</div>